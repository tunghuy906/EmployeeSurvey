@model IEnumerable<EmployeeSurvey.Models.Test>

@{
    ViewData["Title"] = "Quản lý bài test";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Quản lý bài test</h2>
    <div>
        <a asp-action="Create" class="btn btn-primary me-2">Thêm bài test</a>
        <a asp-area="Admin" asp-controller="AdminAssignments" asp-action="AssignGroup" class="btn btn-success">
            Phân công
        </a>
    </div>
</div>

<div class="card shadow-sm rounded-3">
    <div class="card-body">
        <table class="table table-bordered align-middle">
            <thead class="table-success">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Duration)</th>
                    <th>@Html.DisplayNameFor(model => model.PassScore)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                    <th>Người tạo</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.Duration giây</td>
                        <td>@item.PassScore</td>
                        <td>@item.CreatedDate?.ToString("dd/MM/yyyy")</td>
                        <td>@item.CreatedByNavigation?.FullName</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.TestId" class="btn btn-warning btn-sm">Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.TestId" class="btn btn-info btn-sm text-white">Xem</a>
                            <a asp-action="Delete" asp-route-id="@item.TestId" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
