@model EmployeeSurvey.Models.Answer

@{
    ViewData["Title"] = "Chấm câu trả lời";
}

<h2>Chấm câu trả lời</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="AnswerId" />
            <input type="hidden" asp-for="AttemptId" />
            <input type="hidden" asp-for="QuestionId" />
            <input type="hidden" asp-for="OptionId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label class="control-label">Câu trả lời của thí sinh</label>
                <textarea class="form-control" readonly>@Model.AnswerText</textarea>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IsCorrect" class="control-label">Kết quả chấm</label><br />
                <input type="radio" asp-for="IsCorrect" value="true" /> Đúng
                <input type="radio" asp-for="IsCorrect" value="false" class="ms-3" /> Sai
                <span asp-validation-for="IsCorrect" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AdminComment" class="control-label">Nhận xét của admin</label>
                <textarea asp-for="AdminComment" class="form-control"></textarea>
                <span asp-validation-for="AdminComment" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Lưu kết quả" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
