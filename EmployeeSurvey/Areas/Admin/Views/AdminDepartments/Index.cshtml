@model IEnumerable<EmployeeSurvey.Models.Department>

@{
    ViewData["Title"] = "Danh sách phòng ban";
}

<h1>Danh sách phòng ban</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm phòng ban</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>DeptName</th>
            <th>Description</th>
            <th>Nhân viên</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model)
        {
            <tr>
                <td>@dept.DeptName</td>
                <td>@dept.Description</td>
                <td>
                    @if (dept.Users != null && dept.Users.Any())
                    {
                        <span>@dept.Users.Count() nhân viên</span>
                    }
                    else
                    {
                        <span><i>Chưa có nhân viên</i></span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@dept.DeptId" class="btn btn-sm btn-warning">Sửa phòng/ban</a>
                    <a asp-action="Details" asp-route-id="@dept.DeptId" class="btn btn-sm btn-info">Xem phòng/ban</a>
                    <a asp-action="Delete" asp-route-id="@dept.DeptId" class="btn btn-sm btn-danger">Xóa phòng/ban</a>

                    <!-- Nút thêm nhân viên -->
                    <a asp-controller="AdminDepartments" asp-action="AssignToDepartment" asp-route-deptId="@dept.DeptId" class="btn btn-sm btn-success">
                        + Thêm nhân viên
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
