@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <!-- Tiêu đề -->
        <div class="mb-4">
            <h1 class="fw-bold text-success">Xin chào, @ViewBag.FullName 👋</h1>
            <p class="text-muted">Chào mừng bạn đến với hệ thống quản trị.</p>
        </div>

        <!-- Các ô thống kê -->
        <div class="row g-4 mb-5">
            <div class="col-lg-3 col-sm-6">
                <div class="card shadow-sm border-0 rounded-4 h-100 text-center p-3">
                    <div class="text-primary mb-2">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                    <h2 class="fw-bold text-primary">@ViewBag.TotalUsers</h2>
                    <p class="text-muted">Người dùng</p>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card shadow-sm border-0 rounded-4 h-100 text-center p-3">
                    <div class="text-success mb-2">
                        <i class="fas fa-file-alt fa-2x"></i>
                    </div>
                    <h2 class="fw-bold text-success">@ViewBag.TotalTests</h2>
                    <p class="text-muted">Bài test</p>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card shadow-sm border-0 rounded-4 h-100 text-center p-3">
                    <div class="text-warning mb-2">
                        <i class="fas fa-chart-line fa-2x"></i>
                    </div>
                    <h2 class="fw-bold text-warning">@ViewBag.TotalReports</h2>
                    <p class="text-muted">Báo cáo</p>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card shadow-sm border-0 rounded-4 h-100 text-center p-3">
                    <div class="text-danger mb-2">
                        <i class="fas fa-user-shield fa-2x"></i>
                    </div>
                    <h2 class="fw-bold text-danger">@ViewBag.TotalAdmins</h2>
                    <p class="text-muted">Admin</p>
                </div>
            </div>
        </div>

        <!-- Biểu đồ + Danh sách dữ liệu thực -->
        <div class="row mt-5">
            <!-- Biểu đồ -->
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-header bg-white fw-bold">
                        Biểu đồ hoạt động (7 ngày gần nhất)
                    </div>
                    <div class="card-body">
                        <canvas id="activityChart" height="150"></canvas>
                    </div>
                </div>
            </div>

            <!-- Danh sách feedback mới -->
            <div class="col-lg-4">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-header bg-white fw-bold">
                        Feedback mới nhất
                    </div>
                    <div class="card-body">
                        @if (ViewBag.RecentFeedbacks != null && ViewBag.RecentFeedbacks.Count > 0)
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var fb in ViewBag.RecentFeedbacks)
                                {
                                    <li class="list-group-item">
                                        <strong>@fb.UserName:</strong> @fb.Content
                                        <br />
                                        <small class="text-muted">@fb.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted mb-0">Chưa có feedback nào.</p>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

@section Scripts {
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('activityChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.ChartLabels)),
                datasets: [{
                    label: 'Người dùng mới',
                    data: @Html.Raw(Json.Serialize(ViewBag.ChartData)),
                    borderColor: '#0b8457',
                    backgroundColor: 'rgba(11,132,87,0.2)',
                    fill: true,
                    tension: 0.4
                }]
            }
        });
    </script>
}
