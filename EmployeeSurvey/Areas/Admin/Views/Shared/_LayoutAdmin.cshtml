@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Admin Dashboard</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #064420; /* nền xanh lá đậm */
        }

        .container {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Header */
        header {
            background: #ffffff;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 20px;
            font-weight: bold;
            border-bottom: 2px solid #ccc;
        }

            header .user-info {
                font-size: 14px;
                font-weight: normal;
                color: #333;
            }

        /* Main layout */
        .main {
            flex: 1;
            display: flex;
            margin: 20px;
        }

        /* Sidebar */
        .sidebar {
            width: 220px;
            background: #e6e6e6;
            padding: 15px;
            border-radius: 10px 0 0 10px;
        }

            .sidebar h3 {
                margin-top: 0;
                color: #064420;
                text-align: center;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

                .sidebar ul li {
                    margin: 12px 0;
                }

                    .sidebar ul li a {
                        text-decoration: none;
                        color: #064420;
                        font-weight: bold;
                        display: block;
                        padding: 8px 12px;
                        border-radius: 6px;
                        transition: background 0.3s;
                    }

                        .sidebar ul li a:hover {
                            background: #064420;
                            color: white;
                        }

        /* Content */
        .content {
            flex: 1;
            background: #ffffff;
            padding: 25px;
            border-radius: 0 10px 10px 0;
        }

            .content h1 {
                margin-top: 0;
                color: #064420;
            }

        /* Dashboard cards */
        .cards {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .card {
            background: #f4f4f4;
            padding: 20px;
            border-radius: 12px;
            text-align: center;
            box-shadow: 0 3px 6px rgba(0,0,0,0.1);
            transition: transform 0.2s, box-shadow 0.2s;
            cursor: pointer;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0,0,0,0.2);
            }

            .card h2 {
                font-size: 28px;
                margin: 0;
                color: #064420;
            }

            .card p {
                margin: 8px 0 0;
                color: #333;
                font-weight: bold;
            }

        /* Footer */
        footer {
            background: silver;
            text-align: center;
            padding: 10px;
            font-size: 14px;
            border-top: 2px solid #ccc;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header>
            <span>Admin Dashboard</span>
            <div class="user-info">
                Xin chào, <strong>@ViewBag.FullName</strong>
            </div>
        </header>

        <!-- Main -->
        <div class="main">
            <!-- Sidebar -->
            <div class="sidebar">
                <h3>Menu</h3>
                <ul>
                    <li><a href="/Admin/Dashboard/Index">Dashboard</a></li>
                    <li><a href="/Admin/AdminAccounts/Index">Quản lý Users</a></li>
                    <li><a href="/Admin/AdminQuestions/Index">Quản lý câu hỏi</a></li>
                    <li><a href="/Admin/AdminDepartments/Index">Quản lý phòng ban</a></li>
                    <li><a href="/Home/Login">Đăng xuất</a></li>
                </ul>
            </div>

            <!-- Content -->
            <div class="content">
                <h1>Trang quản trị</h1>
                <p>Chào mừng bạn đến với hệ thống quản trị.</p>

                <!-- Các ô chức năng -->
                <div class="cards">
                    <div class="card">
                        <h2>150</h2>
                        <p>Người dùng</p>
                    </div>
                    <div class="card">
                        <h2>23</h2>
                        <p>Bài viết</p>
                    </div>
                    <div class="card">
                        <h2>12</h2>
                        <p>Báo cáo</p>
                    </div>
                    <div class="card">
                        <h2>5</h2>
                        <p>Admin</p>
                    </div>
                </div>

                @RenderBody()
            </div>
        </div>

        <!-- Footer -->
        <footer>
            &copy; 2025 - My Admin Panel
        </footer>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
