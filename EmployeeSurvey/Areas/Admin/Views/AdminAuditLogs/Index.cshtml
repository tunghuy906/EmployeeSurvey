@model IEnumerable<EmployeeSurvey.Models.AuditLog>

@{
    ViewData["Title"] = "Lịch sử hoạt động";
}

<h2 class="mb-3 text-primary">📜 Lịch sử hoạt động</h2>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Người dùng</th>
            <th>Hành động</th>
            <th>Chi tiết</th>
            <th>Thời gian</th>
            <th class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(item.User != null ? item.User.FullName ?? item.User.FullName : "N/A")
                </td>
                <td>@item.Action</td>
                <td>@item.Detail</td>
                <td>@(item.Timestamp?.ToString("dd/MM/yyyy HH:mm:ss") ?? "N/A")</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.LogId" class="btn btn-sm btn-info text-white">
                        <i class="bi bi-eye"></i> Xem
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.LogId" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
