@model IEnumerable<EmployeeSurvey.Models.TestAttempt>

@{
    ViewData["Title"] = "Danh sách bài test và điểm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="fw-bold text-success">Danh sách bài test và điểm</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Tạo bài test mới
        </a>
    </div>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-success text-center">
            <tr>
                <th>@Html.DisplayNameFor(model => model.StartTime)</th>
                <th>@Html.DisplayNameFor(model => model.EndTime)</th>
                <th>@Html.DisplayNameFor(model => model.Score)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>@Html.DisplayNameFor(model => model.Test)</th>
                <th>@Html.DisplayNameFor(model => model.User)</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
                    <td>@Html.DisplayFor(modelItem => item.EndTime)</td>
                    <td class="fw-bold text-center">@Html.DisplayFor(modelItem => item.Score)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>@Html.DisplayFor(modelItem => item.Test.TestId)</td>
                    <td>@Html.DisplayFor(modelItem => item.User.UserId)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.AttemptId" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.AttemptId" class="btn btn-info btn-sm text-white">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.AttemptId" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
