@inject EmployeeSurvey.Models.AppDbContext _context

@{
    var config = _context.SystemConfigs.OrderByDescending(c => c.Id).FirstOrDefault();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeSurvey</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmployeeSurvey.styles.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        /* ===== NAVBAR ===== */
        .navbar {
            background: linear-gradient(90deg, #4CAF50, #FF6F61);
            box-shadow: 0px 2px 6px rgba(0,0,0,0.15);
        }

        .navbar-brand {
            font-weight: 700;
            color: #fff !important;
            font-size: 1.25rem;
        }

        .nav-link {
            color: #fff !important;
            font-weight: 500;
            transition: 0.3s;
        }

            .nav-link:hover {
                background-color: rgba(255, 255, 255, 0.2);
                border-radius: 6px;
            }

        /* ===== USER DROPDOWN ===== */
        .user-menu .dropdown-toggle {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #fff;
            font-weight: 600;
            text-decoration: none;
        }

        .user-menu img {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            object-fit: cover;
        }

        .dropdown-menu {
            border-radius: 10px;
            padding: 8px 0;
        }

        .dropdown-item {
            font-weight: 500;
            padding: 8px 16px;
        }

            .dropdown-item:hover {
                background-color: rgba(76, 175, 80, 0.1);
            }

        .user-menu .dropdown-caret {
            font-size: 1.2rem;
            margin-left: 4px;
        }
    </style>
</head>
<body>
    <!-- ===== HEADER ===== -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <!-- Logo + Tên hệ thống -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    @if (config != null)
                    {
                        if (!string.IsNullOrEmpty(config.LogoPath))
                        {
                            <img src="@config.LogoPath" alt="Logo" width="50" height="50" class="me-2" />
                        }
                        else
                        {
                            <img src="~/Images/default-logo.png" alt="Logo" width="50" height="50" class="me-2" />
                        }

                        <span>@config.SystemName</span>
                    }
                    else
                    {
                        <img src="~/Images/default-logo.png" alt="Logo" width="50" height="50" class="me-2" />
                        <span>Phần mềm khảo sát nhân viên</span>
                    }
                </a>

                <!-- Menu -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">🏠 Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="MyTests" asp-action="Index">📝 Bài test của tôi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="History">📜 Lịch sử làm bài</a>
                        </li>

                        <!-- User Dropdown -->
                        <li class="nav-item dropdown user-menu">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="me-2">@User.Identity.Name</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="EditProfile">✏️ Chỉnh sửa hồ sơ</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="ChangePassword">🔑 Đổi mật khẩu</a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <a class="dropdown-item text-danger fw-bold" asp-controller="Home" asp-action="Logout">🚪 Đăng xuất</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ===== MAIN ===== -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <!-- ===== FOOTER ===== -->
    <footer class="text-center py-3"
            style="background: linear-gradient(90deg, #4CAF50, #FF6F61); color: #fff;">
        <p>
            &copy; 2025 - EmployeeSurvey |
            <a asp-controller="Home" asp-action="Privacy" style="color:#fff;">
                Chính sách bảo mật
            </a>
        </p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
