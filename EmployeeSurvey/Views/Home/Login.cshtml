@{
    Layout = null; // Không dùng _Layout.cshtml
    ViewData["Title"] = "Đăng nhập";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeSurvey</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #FFFFFF; /* nền trắng */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-card {
            max-width: 400px;
            width: 100%;
            border-radius: 16px;
            box-shadow: 0 6px 18px rgba(0,0,0,0.15);
            border: 2px solid #4CAF50;
        }

        .login-header {
            background: linear-gradient(90deg, #4CAF50, #FF6F61);
            color: #fff;
            padding: 20px;
            text-align: center;
            border-radius: 14px 14px 0 0;
        }

            .login-header h3 {
                margin: 0;
                font-weight: bold;
            }

        .card-body {
            padding: 2rem;
        }

        .btn-login {
            background-color: #4CAF50;
            border: none;
            font-weight: bold;
        }

            .btn-login:hover {
                background-color: #45a049;
            }

        a {
            color: #FF6F61;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="card login-card">
        <div class="login-header">
            <h3>Đăng nhập hệ thống</h3>
        </div>
        <div class="card-body">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input name="email" class="form-control" placeholder="Nhập email" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Mật khẩu</label>
                    <input name="password" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                </div>
                <button type="submit" class="btn btn-login text-white w-100">Đăng nhập</button>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="ForgotPassword">Quên mật khẩu?</a>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
