@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow p-4">
            <h3 class="text-center mb-4">Đăng nhập hệ thống</h3>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input name="email" class="form-control" placeholder="Nhập email" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Mật khẩu</label>
                    <input name="password" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                </div>
                <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="ForgotPassword" class="text-decoration-none">Quên mật khẩu?</a>
            </div>

            @* Nếu bạn muốn cho phép đăng ký user mới *@
            <div class="mt-2 text-center">
                <a asp-controller="Users" asp-action="Create" class="text-decoration-none">Chưa có tài khoản? Đăng ký</a>
            </div>
        </div>
    </div>
</div>
